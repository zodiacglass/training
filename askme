import random

###First display text
print("Welcome to my test script on ubuntu!")

### Declare lists and variables
favs = []


### First Question
response = input("What is your favorite number?: ")
if response:
	print("Very good. Lets keep going.")
	favs.append(response)
response = input("What is your favorite color? ")
if response:
	print("Got it." )
	favs.append(response)
response = input("What is your favorite food? ")
if response:
	favs.append(response)
print('So far I have learned that your favorite number is: ' + favs[0] + '\n' + 'Your favorite color is: ' + favs[1] + '\n' + 'Also your favorite food is: ' + favs[2])
print(favs)



